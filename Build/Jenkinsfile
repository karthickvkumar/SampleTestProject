pipeline {
    agent any

    environment {
        ProjectName = 'UnitTestProject'
        BuildConfiguration = 'Release'
    }
    
    stages {
        stage('Build') {
            steps {
              bat label: 'BuildProcess', script: "\"${tool name:'MSBuild15', type:'msbuild'}MSBuild.exe\" ${ProjectName}.sln /t:restore,rebuild /p:Configuration=Debug,RestorePackagesConfig=true"
            }
        }
        stage('Run Tests') {
            steps
            {
              vsTest settings: "bin\\${BuildConfiguration}\\test.runsettings", testFiles: "bin\\${BuildConfiguration}\\BlueRibbonIP.ServiceView.Tests.dll"
              mstest testResultsFile: "bin\\${BuildConfiguration}\\*.trx", keepLongStdio: true
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build and deploy successful.'
        }
        failure {
            echo 'Build or deploy failed.'
        }
    }
}